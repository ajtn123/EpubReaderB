@model CoverViewModel
@{
    ViewData["BookTitle"] = Model.BookTitle;
    ViewData["Title"] = Model.Title;
    ViewData["BookCopyright"] = Model.BookCopyright;
}

<img src="/resources/@Model.Book?.Content.Cover?.Key"
    style="height: calc(100vh - 50px); width: 100%; object-fit: contain;" alt="Book Cover"
    onerror="this.outerHTML='<span>This book does not have a cover.</span>';" />
