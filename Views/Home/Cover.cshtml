@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@inject IHtmlLocalizer<Shared> sharedLocalizer
@model CoverViewModel
@{
    ViewData["BookTitle"] = Model.BookTitle;
    ViewData["Title"] = Model.Title;
    ViewData["BookCopyright"] = Model.BookCopyright;
}

<img src="/resources/@Model.Book?.Content.Cover?.Key"
    style="height: calc(100vh - 50px); width: 100%; object-fit: contain;" alt="@sharedLocalizer["Cover"]"
    onerror="this.outerHTML='<span>@localizer["NoCover"]</span>';" />
